<%- include('../partials/header', { pageTitle: 'Login' }) %>

<div class="auth-page-wrapper">
    <div class="auth-card">
        <h2>Login</h2>

        <% if (locals.error) { %>
            <p class="message error-message"><%= error %></p>
        <% } %>

        <form action="/auth/login" method="POST" class="auth-form">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required value="<%= locals.email || '' %>">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary auth-submit-btn">Login</button>
        </form>

        <div class="auth-switch-link">
            <p>Don't have an account? <a href="/auth/signup">Sign up here</a>.</p>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>